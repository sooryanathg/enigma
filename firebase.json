{
  "apphosting": {
    "backendId": "enigma-backend",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "functions",
      "apps/frontend",
      "apps/admin-dashboard"
    ],
    "alwaysDeployFromSource": true
  },
  "hosting": {
    "public": "apps/frontend/dist/",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
